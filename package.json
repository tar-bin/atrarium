{
  "name": "atrarium",
  "version": "0.1.0",
  "description": "Community management system built on AT Protocol (Bluesky)",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter server dev",
    "deploy": "pnpm --filter server deploy",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "typecheck": "pnpm -r typecheck",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "migrate-docs": "tsx scripts/migrate-vitepress-docs.ts"
  },
  "keywords": [
    "atproto",
    "bluesky",
    "community",
    "cloudflare-workers"
  ],
  "author": "https://github.com/tar-bin",
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.5",
    "tsx": "^4.20.6"
  }
}
