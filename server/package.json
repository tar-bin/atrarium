{
  "name": "@atrarium/server",
  "version": "0.1.0",
  "description": "Atrarium server (Cloudflare Workers backend)",
  "private": true,
  "main": "src/index.ts",
  "scripts": {
    "dev": "wrangler dev",
    "deploy": "wrangler deploy",
    "build": "wrangler deploy --dry-run",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "test:pds": "vitest run --config vitest.pds.config.ts",
    "typecheck": "tsc --noEmit",
    "codegen": "npx @atproto/lex-cli gen-api src/schemas/generated/ ../lexicons/*.json"
  },
  "dependencies": {
    "@atrarium/contracts": "workspace:*",
    "@atproto/api": "^0.13.35",
    "@atproto/identity": "^0.4.3",
    "@atproto/xrpc-server": "^0.7.4",
    "@orpc/openapi": "^1.9.3",
    "@orpc/server": "^1.9.3",
    "@orpc/zod": "^1.9.3",
    "hono": "^4.6.14",
    "jose": "^5.9.6",
    "zod": "^4.1.11"
  },
  "devDependencies": {
    "@atproto/lex-cli": "^0.9.5",
    "@cloudflare/vitest-pool-workers": "^0.5.30",
    "@cloudflare/workers-types": "^4.20241127.0",
    "@types/node": "^22.10.2",
    "glob": "^11.0.3",
    "typescript": "^5.7.2",
    "vitest": "^2.1.8",
    "wrangler": "^3.94.0"
  }
}
